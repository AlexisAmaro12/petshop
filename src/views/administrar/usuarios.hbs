{{> navadmin}}
{{> message}}

<div class="container">
  <div class="row">
    <div class="col-6"><h1>Usuarios</h1></div>
    <div class="col-6 d-flex justify-content-end">
      <a href="/administrar/usuarios/add" type="button" class="btn btn-primary align-self-center">+ Agregar Usuario</a>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Username</th>
          <th scope="col">Nombre</th>
          <th scope="col">Email</th>
          <th scope="col">Estado</th>
          <th scope="col">Rol</th>
          <th scope="col" class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>

        {{#each usuarios}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.username}}</td>
          <td>{{this.fullname}}</td>
          <td>{{this.email}}</td>
          <td>{{this.estado}}</td>
          <td>{{this.rol}}</td>
          <td class="text-end">
            <a href="/administrar/usuarios/edit/{{this.id}}" type="button" class="btn btn-warning btn-small"><i class="bi bi-pencil"></i>Edit</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>