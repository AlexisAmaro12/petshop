{{> navigation}}
{{> message}}
    <p class="h1 text-center mt-3 fw-light" href="#">
        <img  src="img/logo.jpg" alt="Logo" width="80" height="80"class="d-inline-block align-text-center">
        PetShop</p>

    <div class="container">
        <div class="col-6 offset-3">
            <div class="row">
                <div class="shadow-lg p-3 mb-4 mt-4 bg-body rounded border border-black">
                    <form action="/signup" method="POST">
                        <div class="col-xl-8 offset-xl-2">
                            <h2 class="fw-light mb-4 mt-2">Crear Cuenta</h2>
                            <div class="mb-3">
                                <label for="inputNombre" class="form-label" >Nombre Completo</label>
                                <input type="text" class="form-control" id="inputNombre" placeholder="Nombre Completo" name="fullname" autofocus>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input id="email" name="email" type="email" class="form-control" placeholder="Email" name="email">
                            </div>
                            <div class="mb-3">
                                <label for="inputUsername" class="form-label" >Username</label>
                                <input type="text" class="form-control" id="inputUsername" placeholder="Username" name="username">
                            </div>
                            <div class="mb-3">
                                <label for="inputPassword" class="form-label" >Password</label>
                                <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
                            </div>
                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
                                <label class="form-check-label" for="exampleCheck1">Aceptar terminos y condiciones de uso y el aviso de privacidad de PetShop.</label>
                            </div>
                            <div class="d-flex mb-3">
                                <p class="fst-italic me-2">¿Ya tienes una cuenta?</p>
                                <a class="sin-subrayado" href="/signin">Iniciar Sesion</a>
                            </div>
                        </div>
                        <div class="text-center mt-4 mb-2"><button type="submit" class="btn btn-success">Crear Cuenta</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <footer class="py-3" style="background-color: #C7E8CA;">
        <p class="text-center fst-italic fs-5">Aviso de privacidad | © 2023, PetShop. Todos los Derechos Reservados.</p>
    </footer>