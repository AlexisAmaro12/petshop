{{> navadmin}}
{{> message}}

<div class="container">
  <div class="row">
    <div class="col-6"><h1>Productos</h1></div>
    <div class="col-6 d-flex justify-content-end">
      <a href="/productos/add" type="button" class="btn btn-primary align-self-center">+ Agregar Producto</a>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombre</th>
          <th scope="col">Categoria</th>
          <th scope="col">Precio</th>
          <th scope="col">Cantidad</th>
          <th scope="col">Inicio</th>
          <th scope="col">Descripcion</th>
          <th scope="col" class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>

        {{#each productos}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.nombre}}</td>
          <td>{{this.categoria}}</td>
          <td>{{this.precio}}</td>
          <td>{{this.cantidad}}</td>
          <td>{{this.inicio}}</td>
          <td>{{this.descripcion}}</td>
          <td class="text-end">
            <a href="/productos/edit/{{this.id}}" type="button" class="btn btn-warning btn-small"><i class="bi bi-pencil"></i>Edit</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
